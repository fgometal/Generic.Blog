@model MundiPagg.Blog.WebUI.Models.EditPostModel
@{
    ViewBag.Title = Model.PostId == 0 ? "Criar Postagem" : "Editar postagem";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script>
    $(function () {
        $('#txtContent').ckeditor();
    });
</script>

<script src="@Url.Content("~/Content/Ckeditor/ckeditor.js")"></script>
<script src="@Url.Content("~/Content/Ckeditor/adapters/jquery.js")"></script>

<div class="container" style="margin-top: 60px;">
    <div class="row">
        <h2>@ViewBag.Title</h2>
        <br />
    </div>

    @using (@Html.BeginForm("Edit", "Post", FormMethod.Post))
    {
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                @Html.LabelFor(model => model.Title)
                @Html.TextBoxFor(model => model.Title, new { @id = "txtTitle" })
                <p class="help-block text-danger">
                    @Html.ValidationMessageFor(model => model.Title)
                </p>
            </div>
        </div>
        
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                @Html.LabelFor(model => model.Summary)
                @Html.TextBoxFor(model => model.Summary, new { @id = "txtSummary" })
                <p class="help-block text-danger">
                    @Html.ValidationMessageFor(model => model.Summary)
                </p>
            </div>
        </div>
        
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                @Html.LabelFor(model => model.Tags)
                @Html.TextBoxFor(model => model.Tags, new { @id = "txtTags" })
                <p class="help-block text-danger">
                    @Html.ValidationMessageFor(model => model.Tags)
                </p>
            </div>
        </div>
        
        <div class="row control-group">
            <div class="form-group col-xs-12 floating-label-form-group controls">
                @Html.LabelFor(model => model.Content)
                @Html.TextAreaFor(model => model.Content, new { @id = "txtContent" })
                <p class="help-block text-danger">
                    @Html.ValidationMessageFor(model => model.Content)
                </p>
            </div>
        </div>
        
        <div class="row">
            <div class="form-group col-xs-12">
                <button type="submit" class="btn btn-default">Salvar</button>
            </div>
        </div>
    }
</div>

