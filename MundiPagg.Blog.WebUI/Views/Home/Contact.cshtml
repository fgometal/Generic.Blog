@model MundiPagg.Blog.WebUI.Models.MailModel
@{
    ViewBag.Title = "Entre em contato!";
}

<input type="hidden" value="@ViewBag.Success" id="success" />

<!-- Header -->
<header class="intro-header" style="background-image: url('@Href("~/Content/Bootstrap/img", "contact-bg.jpg")')">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                <div class="page-heading">
                    <h1>@ViewBag.Title</h1>
                    <hr class="small">
                    <span class="subheading">Tem perguntas? Eu tenho respostas. (talvez).</span>
                </div>
            </div>
        </div>
    </div>
</header>

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-lg-offset-2 col-md-10 col-md-offset-1">
            <p>@Html.ValidationSummary(true, "Não foi possível enviar a mensagem. Corrija os campos informados e tente novamente.")</p>

            @using (Html.BeginForm("SendMail", "Home", FormMethod.Post))
            {    
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        @Html.LabelFor(model => model.Name)
                        @Html.TextBoxFor(model => model.Name, new { @placeholder = "Nome" })
                        <p class="help-block text-danger">
                            @Html.ValidationMessageFor(model => model.Name)
                        </p>
                    </div>
                </div>
                
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        @Html.LabelFor(model => model.Email)
                        @Html.TextBoxFor(model => model.Email, new { @placeholder = "Endereço de e-mail" })
                        <p class="help-block text-danger">
                            @Html.ValidationMessageFor(model => model.Email)
                        </p>
                    </div>
                </div>
                
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        @Html.LabelFor(model => model.Phone)
                        @Html.TextBoxFor(model => model.Phone, new { @placeholder = "Telefone" })
                        <p class="help-block text-danger">
                            @Html.ValidationMessageFor(model => model.Phone)
                        </p>
                    </div>
                </div>
                
                <div class="row control-group">
                    <div class="form-group col-xs-12 floating-label-form-group controls">
                        @Html.LabelFor(model => model.Message)
                        @Html.TextAreaFor(model => model.Message, new { @placeholder = "Mensagem" })
                        <p class="help-block text-danger">
                            @Html.ValidationMessageFor(model => model.Message)
                        </p>
                    </div>
                </div>
        
                <div id="success" style="background-color: rgb(62, 234, 52); padding: 10px;">
                    <p>@ViewBag.Message</p>
                </div>
                <div class="row">
                    <div class="form-group col-xs-12">
                        <button type="submit" class="btn btn-default">Enviar</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
